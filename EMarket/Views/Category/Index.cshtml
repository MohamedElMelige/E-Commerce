@model IEnumerable<EMarket.Models.Category>

@{
    ViewBag.Title = "Categories";
}

<hr />
<h2>Categories</h2>
<hr />

@if (TempData["CreateAlert"] != null)
{
    <div class="alert alert-info">
        <strong>@TempData["CreateAlert"]</strong>
    </div>
}

@if (TempData["EditAlert"] != null)
{
    <div class="alert alert-success">
        <strong>@TempData["EditAlert"]</strong>
    </div>
}

@if (TempData["DeleteAlert"] != null)
{
    <div class="alert alert-danger">
        <strong>@TempData["DeleteAlert"]</strong>
    </div>
}

<div>
    <p>
        <a href="@Url.Action("Create","Category")" class="btn btn-primary text-center">Add Category</a>
    </p>
</div>

<hr />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfProducts)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfProducts)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success text-center" })
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger text-center" })
            </td>
        </tr>
    }

</table>

<hr />

<div>
    <a href="@Url.Action("Index","Product")" class="btn btn-default text-center">Back To Products</a>
</div>